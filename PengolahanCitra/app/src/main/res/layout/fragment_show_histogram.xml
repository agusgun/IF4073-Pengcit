<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".histogram.ShowHistogramFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/show_histogram_fr_red_histogram"
            android:layout_width="match_parent"
            android:layout_height="125dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/show_histogram_fr_green_histogram"
            android:layout_width="match_parent"
            android:layout_below="@id/show_histogram_fr_red_histogram"
            android:layout_height="125dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/show_histogram_fr_blue_histogram"
            android:layout_width="match_parent"
            android:layout_below="@id/show_histogram_fr_green_histogram"
            android:layout_height="125dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/show_histogram_fr_gray_histogram"
            android:layout_width="match_parent"
            android:layout_below="@id/show_histogram_fr_blue_histogram"
            android:layout_height="125dp" />

    </RelativeLayout>

</FrameLayout>
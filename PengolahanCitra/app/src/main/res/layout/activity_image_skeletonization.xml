<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image_skeletonization.ImageSkeletonizationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/skeletonization_original_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />

        <Button
            android:id="@+id/skeletonization_skeletonize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skeletonization_original_image"
            android:layout_centerHorizontal="true"
            android:onClick="skeletonizeImage"
            android:text="@string/skeletonize_image" />

        <ImageView
            android:id="@+id/skeletonization_result_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/skeletonization_skeletonize_button"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />

    </RelativeLayout>

</ScrollView>
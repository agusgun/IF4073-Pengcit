<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".histogram.specification.HistogramSpecificationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/histogram_specification_original_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />

        <GridLayout
            android:id="@+id/histogram_specification_equalizer_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/histogram_specification_original_image"
            android:layout_marginTop="15dp"
            android:columnCount="5">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/histogram_specification_seekbar_point_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:seekBarRotation="CW270" />
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/histogram_specification_seekbar_point_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:seekBarRotation="CW270" />
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/histogram_specification_seekbar_point_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:seekBarRotation="CW270" />
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/histogram_specification_seekbar_point_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:seekBarRotation="CW270" />
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/histogram_specification_seekbar_point_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:seekBarRotation="CW270" />
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

            <TextView
                android:id="@+id/histogram_specification_detail_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/histogram_specification_detail_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/histogram_specification_detail_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/histogram_specification_detail_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/histogram_specification_detail_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0" />

        </GridLayout>

        <Button
            android:id="@+id/histogram_specification_generate_equalized_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/histogram_specification_equalizer_layout"
            android:layout_centerHorizontal="true"
            android:onClick="generateEqualizedImage"
            android:text="@string/generate_equalized_image" />


        <com.jjoe64.graphview.GraphView
            android:id="@+id/histogram_specification_referenced_histogram"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_below="@id/histogram_specification_generate_equalized_image_button" />


        <ImageView
            android:id="@+id/histogram_specification_result_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/histogram_specification_referenced_histogram"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />

    </RelativeLayout>

</ScrollView>
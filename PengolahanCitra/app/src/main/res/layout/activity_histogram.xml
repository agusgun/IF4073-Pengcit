<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".histogram.HistogramActivity">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/red_histogram"
        android:layout_width="match_parent"
        android:layout_height="125dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/green_histogram"
        android:layout_width="match_parent"
        android:layout_below="@id/red_histogram"
        android:layout_height="125dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/blue_histogram"
        android:layout_width="match_parent"
        android:layout_below="@id/green_histogram"
        android:layout_height="125dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/gray_histogram"
        android:layout_width="match_parent"
        android:layout_below="@id/blue_histogram"
        android:layout_height="125dp" />
</RelativeLayout>